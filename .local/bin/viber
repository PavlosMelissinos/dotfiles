#!/bin/bash
# Viber AppImage launcher with minimal OpenGL bypass

# Essential OpenGL bypass for appimage-run compatibility
export QT_OPENGL=none
export QT_XCB_GL_INTEGRATION=none
export QT_QUICK_BACKEND=software
export LIBGL_ALWAYS_SOFTWARE=1

# Set browser for link opening
export BROWSER="firefox"

exec appimage-run /home/pavlos/.local/bin/viber.AppImage "$@"