[user]
  # These values are set in $XDG_CONFIG_HOME/git/.config
[core]
	autocrlf = false
	attributesfile = $HOME/.gitattributes
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[pull]
	rebase = false
[merge]
	conflictStyle = diff3
[init]
	defaultBranch = main
[diff "clojure"]
	xfuncname = (^\\(.*|\\s*\\(defn.*)
[github]
  # These values are set in $XDG_CONFIG_HOME/git/.config
[include]
  path = ~/.config/git/.config