exec_always ~/.guix-profile/libexec/geoclue-2.0/demos/agent
exec gammastep-indicator

exec_always export XCURSOR_SIZE=24
exec_always export XCURSOR_THEME=Adwaita
exec_always export XCURSOR_SIZE_MULTIPLIER=1.5

exec_always export GDK_SCALE=0
exec_always export GDK_DPI_SCALE=1.0
# Let the compositor handle scaling
exec_always export GDK_BACKEND=wayland

exec_always {
    mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob
    flashfocus
    systemctl --user start mako
    gsettings set org.gnome.desktop.interface cursor-theme 'Adwaita'
    gsettings set org.gnome.desktop.interface cursor-size 32
    gsettings set org.gnome.desktop.interface scaling-factor 1
}

